@model Dvor.Web.Models.UserViewModel

<h1 class="menu__title">
    Profile <span class="menu__title--add">
        Please, add your personal
        information
    </span>
</h1>

<div class="register-form">
    @Html.ValidationSummary()
    <form action="#" method="post">
        <label class="register__label" for="name">Name:</label>
        @Html.TextBoxFor(model => model.Name, new { @class = "register__input", placeholder = "Enter your name" })
        <label class="register__label" for="allergies">Allergies:</label>
        <div class="block-chosen-dishes">

            @foreach (var allergy in Model.AllAllergies)
            {
                <div class="chosen-dishes">
                    <p class="dishes-name">@allergy.Name</p>
                    <img class="alergy-img" src="@allergy.Image" alt="wheat">
                    <p class="dishes-describe">
                        @allergy.Description
                    </p>
                    <input class="checkbox" type="checkbox" name="check1" value="@allergy.AllergyId" id="check1" @(Model.UserAllergies.Contains(allergy.AllergyId) ? "checked" : "")>
                    <label class="checklabel dishes-remove" for="check1">add</label>
                </div>
            }

        </div>
        <button type="submit" class="button-order">Save</button>

    </form>
</div>